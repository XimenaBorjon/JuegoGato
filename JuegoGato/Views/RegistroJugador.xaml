<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuegoGato.Views.RegistroJugador"
            Title="RegistroJugador">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0">
                <GradientStop Color="#2AF498"
                          Offset="0.1" />
                <GradientStop Color="#11C1D3"
                          Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Label Text="Registro Jugador" FontFamily="ka1" FontSize="38" Margin="10"  TextColor="Green" HorizontalTextAlignment="Center" Grid.Row="0" />

        <Label Text="Nombre Jugador"  FontFamily="ka1" FontSize="20" Margin="10"  TextColor="#01A0FA" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Grid.Row="1"></Label>
        <Entry FontFamily="ka1" FontSize="20"  TextColor="#01A0FA"  VerticalTextAlignment="Center" Grid.Row="2" Grid.RowSpan="1"></Entry>
    </Grid>
         
    
</ContentPage>